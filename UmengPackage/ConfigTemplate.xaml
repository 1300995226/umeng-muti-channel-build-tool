<Window x:Class="UmengPackage.ConfigTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UIControls;assembly=UIControls"
             mc:Ignorable="d" 
             Height="450" Width="650" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
         Title="签名和渠道模版配置">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="HorizontalListDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Height="402">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <!--GroupBox Header="签名配置" Height="115" HorizontalAlignment="Left" Margin="8,12,0,0" Name="groupBox2" VerticalAlignment="Top" Width="610">
            <Grid Height="120" Width="595">
                <TextBlock Height="23" HorizontalAlignment="Left" Margin="13,6,0,0" Name="keystore" Text="KeyStore:" VerticalAlignment="Top" />
                <TextBlock Height="23" HorizontalAlignment="Left" Margin="290,45,0,0" Name="keystore_pw" Text="Password:" VerticalAlignment="Top" />
                <TextBlock Height="23" HorizontalAlignment="Left" Margin="37,45,0,0" Name="alias" Text="Alias:" VerticalAlignment="Top" />
                <TextBlock Height="23" HorizontalAlignment="Left" Margin="292,9,0,0" Name="alias_pw" Text="Password:" VerticalAlignment="Top" />
                <TextBox Height="23" HorizontalAlignment="Left" Margin="355,6,0,0" Name="tb_store_pw" VerticalAlignment="Top" Width="157" 
                         Text="{Binding Keystore_Pw}" />
                <TextBox Height="23" HorizontalAlignment="Left" Margin="81,42,0,0" Name="tb_alias" VerticalAlignment="Top" Width="157" 
                         Text="{Binding Alias}"/>
                <TextBox Height="23" HorizontalAlignment="Left" Margin="355,42,0,0" Name="tb_alias_pw" VerticalAlignment="Top" Width="157" 
                         Text="{Binding Key_Pw}"/>
                <local:SearchTextBox Search="SearchTextBox_FindKeyStore" Name="tb_keystore" Margin="81,6,357,88" LabelText="path to keystore "
                         Text="{Binding Keystore_File_Path}"/>
            </Grid>
        </GroupBox-->
        <GroupBox Grid.Row="1" Header="常用渠道" Height="100" Margin="18,7,0,0" Name="groupBox3" VerticalAlignment="Top" HorizontalAlignment="Left" Width="600">
            <ListBox x:Name="StandardChannelTemplate" Width="Auto" Style="{StaticResource ListBoxControlStyle}" Grid.Row="1" ButtonBase.Click="Button_Add" Background="Transparent" 
                     />
        </GroupBox>
        <GroupBox Grid.Row="2" Header="渠道配置" Height="100" HorizontalAlignment="Left" Margin="12,0,0,0" Name="groupBox4" VerticalAlignment="Top" Width="600">
            <Grid  Width="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ListBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="740" Height="200" x:Name="Channels" Background="Transparent" Margin="30,1,2,1" 
                 HorizontalContentAlignment="Stretch">
                    <ListBox.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                    </ListBox.Resources>

                    <ListBox.Template>
                        <ControlTemplate>
                            <Grid>
                                <Border Background="#35333D" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                                    <Border Background="Transparent" BorderBrush="#383543" BorderThickness="1" ClipToBounds="True" CornerRadius="5">
                                        <Border Background="Transparent" BorderBrush="#26242C" BorderThickness="3,3,3,3" Margin="-3,-3,-3,-3" CornerRadius="5">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0" BlurRadius="15"/>
                                            </Border.Effect>
                                        </Border>
                                    </Border>
                                </Border>
                                <ScrollViewer Margin="3" Focusable="false">
                                    <WrapPanel Margin="2" IsItemsHost="True" Orientation="Horizontal"/>
                                </ScrollViewer>
                            </Grid>
                        </ControlTemplate>
                    </ListBox.Template>

                    <ListBox.ItemTemplate >
                        <DataTemplate >
                            <Grid Width="120" Height="43" Margin="0,0,0,0" Background="Transparent" Tag="{Binding State}">
                                <Image Name="bg_image" Source="Images/channel_item.png" Stretch="None" Visibility="Visible" />
                                <TextBlock Name="channel_tb" Text="GooglePlay" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Foreground="#FF9E9AA4" Margin="0,-8,0,0"/>
                                <Image Name="delete_button" Source="Images/remove.png" Stretch="None" Margin="80,0,0,0" Visibility="Collapsed"/>

                                <TextBox Text="Go" Width="120" Height="30" FontSize="12" Background="Transparent" Visibility="Collapsed"/>
                                
                                <Grid.Triggers>

                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Visibility" TargetName="delete_button" Value="Visible" />
                                    </Trigger>
                                    <Trigger Property="Tag" Value="InEdit">
                                        <Setter Property="Visibility" TargetName="bg_image" Value="Collapsed"/>
                                        <Setter Property="Visibility" TargetName="channel_tb" Value="Collapsed"/>
                                    </Trigger>
                                </Grid.Triggers>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </GroupBox>
        <Button Grid.Row="3" Content="保存" Height="23" HorizontalAlignment="Left" Margin="556,15,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="save_Click" />
        <Button Grid.Row="3" Content="取消" Height="23" HorizontalAlignment="Left" Margin="478,15,0,0" Name="button2" VerticalAlignment="Top" Width="75" Click="cancel_Click"/>
        <TextBlock Grid.Row="3" Height="23" HorizontalAlignment="Left" Margin="18,21,0,0" Name="textBlock2" Text="配置文件名:" VerticalAlignment="Top" Grid.RowSpan="2" />
        <TextBox Grid.Row="3" Height="23" HorizontalAlignment="Left" Margin="87,15,0,0" Name="tb_setting_file" VerticalAlignment="Top" Width="175" />
    </Grid>
</Window>
